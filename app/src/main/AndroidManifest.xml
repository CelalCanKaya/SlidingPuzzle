<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slidingpuzzle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.slidingpuzzle.GameScreen"
            android:screenOrientation="sensorPortrait"></activity>
        <activity android:name="com.example.slidingpuzzle.Settings"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name="com.example.slidingpuzzle.HighScore"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name="com.example.slidingpuzzle.mainMenu"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name="com.example.slidingpuzzle.MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>